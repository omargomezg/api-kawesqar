{
  "name": "bodega-api",
  "version": "1.0.0",
  "description": "Api para acceso a BD Bodega",
  "main": "build/server.js",
  "dependencies": {
    "bluebird": "^3.5.3",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "mssql": "^5.1.0",
    "reflect-metadata": "^0.1.13",
    "router-express": "^1.5.2",
    "routing-controllers": "^0.7.7",
    "typescript": "^3.5.1"
  },
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node .",
    "start:watch": "nodemon",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "author": "Omar Gomez",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/mssql": "^4.0.14",
    "@types/node": "^12.0.4",
    "nodemon": "^1.19.1",
    "tslint": "^5.17.0"
  }
}
