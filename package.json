{
  "name": "bodega-api",
  "version": "1.0.0",
  "description": "Api para acceso a BD Bodega",
  "main": "build/server.js",
  "dependencies": {
    "bluebird": "^3.5.5",
    "body-parser": "^1.19.0",
    "class-validator": "^0.9.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mssql": "^5.1.0",
    "reflect-metadata": "^0.1.13",
    "router-express": "^1.5.2",
    "routing-controllers": "^0.7.7",
    "typeorm": "^0.2.18"
